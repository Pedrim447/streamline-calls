# ===========================================
# CONFIGURAÇÃO DO SERVIDOR
# ===========================================
NODE_ENV=production
PORT=3001
API_VERSION=v1

# ===========================================
# CONFIGURAÇÃO DO BANCO DE DADOS ORACLE
# ===========================================
# Opção 1: Connection String Completa
ORACLE_CONNECTION_STRING=localhost:1521/ORCL

# Opção 2: Parâmetros Separados (alternativa)
# ORACLE_HOST=localhost
# ORACLE_PORT=1521
# ORACLE_SERVICE_NAME=ORCL
# ORACLE_SID=ORCL

# Credenciais
ORACLE_USER=filafacil
ORACLE_PASSWORD=sua_senha_segura

# Pool de Conexões
ORACLE_POOL_MIN=2
ORACLE_POOL_MAX=10
ORACLE_POOL_INCREMENT=1

# ===========================================
# CONFIGURAÇÃO JWT
# ===========================================
JWT_SECRET=sua_chave_secreta_muito_longa_e_segura_aqui_minimo_32_caracteres
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=outra_chave_secreta_para_refresh_tokens
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CONFIGURAÇÃO LDAP/ACTIVE DIRECTORY
# ===========================================
LDAP_ENABLED=true
LDAP_URL=ldap://seu-servidor-ad.gov.br:389
LDAP_BASE_DN=DC=seu-dominio,DC=gov,DC=br
LDAP_BIND_DN=CN=ServiceAccount,OU=ServiceAccounts,DC=seu-dominio,DC=gov,DC=br
LDAP_BIND_PASSWORD=senha_do_service_account
LDAP_USER_SEARCH_BASE=OU=Users,DC=seu-dominio,DC=gov,DC=br
LDAP_USER_SEARCH_FILTER=(sAMAccountName={{username}})
LDAP_GROUP_SEARCH_BASE=OU=Groups,DC=seu-dominio,DC=gov,DC=br
LDAP_ADMIN_GROUP=CN=FilaFacil-Admins,OU=Groups,DC=seu-dominio,DC=gov,DC=br
LDAP_ATTENDANT_GROUP=CN=FilaFacil-Atendentes,OU=Groups,DC=seu-dominio,DC=gov,DC=br
LDAP_RECEPCAO_GROUP=CN=FilaFacil-Recepcao,OU=Groups,DC=seu-dominio,DC=gov,DC=br

# TLS/SSL para LDAP (recomendado em produção)
LDAP_TLS_ENABLED=false
LDAP_TLS_CERT_PATH=/path/to/cert.pem
LDAP_TLS_REJECT_UNAUTHORIZED=true

# ===========================================
# CONFIGURAÇÃO DE CORS
# ===========================================
CORS_ORIGIN=http://localhost:5173,https://seu-frontend.gov.br
CORS_CREDENTIALS=true

# ===========================================
# CONFIGURAÇÃO DE LOGS E AUDITORIA
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# WEBSOCKET
# ===========================================
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000
